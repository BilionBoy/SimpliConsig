<style>
  :root {
    --primary-blue: #1e40af;
    --primary-blue-dark: #1d4ed8;
    --accent-orange: #f59e0b;
    --success: #10b981;
    --error: #ef4444;
    --neutral-25: #fafafa;
    --neutral-50: #f9fafb;
    --neutral-100: #f3f4f6;
    --neutral-200: #e5e7eb;
    --neutral-300: #d1d5db;
    --neutral-400: #9ca3af;
    --neutral-500: #6b7280;
    --neutral-600: #4b5563;
    --neutral-700: #374151;
    --neutral-900: #111827;
    --border-radius-lg: 12px;
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .form-wizard {
    background: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--neutral-200);
    overflow: hidden;
    height: calc(100vh - 140px);
    display: flex;
    flex-direction: column;
  }

  .wizard-header {
    background: var(--neutral-50);
    padding: 16px 24px;
    border-bottom: 1px solid var(--neutral-200);
    flex-shrink: 0;
  }

  .wizard-title {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
  }

  .wizard-title h1 {
    font-size: 18px;
    font-weight: 700;
    color: var(--neutral-900);
    margin: 0;
  }

  .wizard-steps {
    display: flex;
    align-items: center;
    gap: 24px;
    margin-bottom: 12px;
    justify-content: center;
  }

  .wizard-step {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--neutral-500);
    font-size: 13px;
    font-weight: 500;
    position: relative;
  }

  .wizard-step:not(:last-child)::after {
    content: '';
    position: absolute;
    right: -16px;
    top: 50%;
    transform: translateY(-50%);
    width: 8px;
    height: 1px;
    background: var(--neutral-300);
  }

  .wizard-step.active {
    color: var(--primary-blue);
  }

  .wizard-step.completed {
    color: var(--success);
  }

  .step-number {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 12px;
    border: 2px solid var(--neutral-300);
    background: white;
    transition: all 0.3s ease;
  }

  .wizard-step.active .step-number {
    background: var(--primary-blue);
    color: white;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(30, 64, 175, 0.1);
  }

  .wizard-step.completed .step-number {
    background: var(--success);
    color: white;
    border-color: var(--success);
  }

  .wizard-progress {
    height: 4px;
    background: var(--neutral-200);
    border-radius: 2px;
    overflow: hidden;
  }

  .wizard-progress-bar {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-blue) 0%, var(--accent-orange) 100%);
    transition: width 0.4s ease;
    width: 33%;
  }

  .wizard-content {
    flex: 1;
    overflow-y: auto;
    padding: 20px 24px;
    min-height: 0;
  }

  .form-section {
    margin-bottom: 24px;
  }

  .form-section:last-child {
    margin-bottom: 0;
  }

  .section-title {
    font-size: 16px;
    font-weight: 700;
    color: var(--neutral-900);
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    gap: 8px;
    padding-bottom: 6px;
    border-bottom: 2px solid var(--neutral-100);
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 16px;
    margin-bottom: 16px;
  }

  .form-row.two-cols {
    grid-template-columns: 1fr 1fr;
  }

  .form-row.three-cols {
    grid-template-columns: 1fr 1fr 1fr;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .form-label {
    font-size: 13px;
    font-weight: 600;
    color: var(--neutral-700);
    margin-bottom: 2px;
  }

  .form-label.required::after {
    content: '*';
    color: var(--error);
    margin-left: 4px;
  }

  .form-input, .form-select, .form-textarea {
    padding: 10px 12px;
    border: 1.5px solid var(--neutral-300);
    border-radius: 8px;
    font-size: 13px;
    transition: all 0.3s ease;
    background: white;
    font-family: inherit;
  }

  .form-input:focus, .form-select:focus, .form-textarea:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(30, 64, 175, 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 80px;
  }

  .conditional-field {
    display: none;
    animation: fadeInDown 0.3s ease-out;
  }

  .conditional-field.show {
    display: block;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .file-upload {
    border: 2px dashed var(--neutral-300);
    border-radius: 10px;
    padding: 24px 16px;
    text-align: center;
    transition: all 0.3s ease;
    cursor: pointer;
    background: var(--neutral-25);
  }

  .file-upload:hover {
    border-color: var(--primary-blue);
    background: rgba(30, 64, 175, 0.05);
  }

  .file-upload.has-file {
    border-color: var(--success);
    background: rgba(16, 185, 129, 0.05);
  }

  .file-upload-icon {
    width: 36px;
    height: 36px;
    margin: 0 auto 12px;
    color: var(--neutral-400);
  }

  .file-upload-text {
    color: var(--neutral-600);
    font-weight: 600;
    margin-bottom: 6px;
    font-size: 13px;
  }

  .file-upload-hint {
    color: var(--neutral-500);
    font-size: 11px;
  }

  .wizard-actions {
    padding: 16px 24px;
    background: var(--neutral-50);
    border-top: 1px solid var(--neutral-200);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-shrink: 0;
    gap: 12px;
  }

  .btn-group {
    display: flex;
    gap: 10px;
  }

  .modern-btn {
    padding: 10px 20px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 13px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    text-decoration: none;
  }

  .modern-btn-outline {
    background: white;
    color: var(--neutral-600);
    border: 1.5px solid var(--neutral-300);
  }

  .modern-btn-outline:hover {
    background: var(--neutral-100);
    color: var(--neutral-700);
    border-color: var(--neutral-400);
  }

  .modern-btn-primary {
    background: var(--primary-blue);
    color: white;
    box-shadow: 0 4px 12px rgba(30, 64, 175, 0.3);
  }

  .modern-btn-primary:hover {
    background: var(--primary-blue-dark);
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(30, 64, 175, 0.4);
  }

  .modern-btn-success {
    background: var(--success);
    color: white;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  }

  .modern-btn-success:hover {
    background: #059669;
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
  }

  /* Responsividade */
  @media (max-width: 768px) {
    .form-wizard {
      height: calc(100vh - 120px);
    }

    .wizard-steps {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }

    .wizard-step::after {
      display: none;
    }

    .form-row,
    .form-row.two-cols,
    .form-row.three-cols {
      grid-template-columns: 1fr;
    }

    .wizard-content {
      padding: 16px 20px;
    }

    .wizard-actions {
      padding: 12px 20px;
      flex-direction: column;
      gap: 10px;
    }

    .btn-group {
      width: 100%;
      justify-content: space-between;
    }

    .modern-btn {
      flex: 1;
      justify-content: center;
    }
  }

  @media (max-height: 800px) {
    .wizard-header {
      padding: 12px 24px;
    }

    .wizard-content {
      padding: 16px 24px;
    }

    .form-section {
      margin-bottom: 20px;
    }

    .section-title {
      margin-bottom: 12px;
      font-size: 15px;
    }

    .form-row {
      margin-bottom: 12px;
    }

    .wizard-actions {
      padding: 12px 24px;
    }
  }

  @media (max-height: 700px) {
    .wizard-header {
      padding: 10px 24px;
    }

    .wizard-content {
      padding: 12px 24px;
    }

    .form-section {
      margin-bottom: 16px;
    }

    .section-title {
      margin-bottom: 10px;
      font-size: 14px;
    }

    .form-row {
      margin-bottom: 10px;
      gap: 12px;
    }

    .form-input, .form-select, .form-textarea {
      padding: 8px 10px;
    }

    .form-textarea {
      min-height: 60px;
    }
  }
</style>
<div class="modern-dashboard">
  <!-- Header -->
  <div class="page-header clients-header shadow-sm">
    <div class="page-header-content d-lg-flex">
      <div class="d-flex">
        <div class="breadcrumb modern-breadcrumb py-3">
          <a href="<%= root_path %>" class="breadcrumb-item">
            <i data-lucide="home" style="width: 16px; height: 16px;"></i>
          </a>
          <a href="<%= clients_path %>" class="breadcrumb-item">Clientes</a>
          <a href="<%= client_path(@client) %>" class="breadcrumb-item"><%= @client.nome_completo %></a>
          <span class="breadcrumb-item active">Editar</span>
        </div>
      </div>
    </div>
  </div>
  <div class="content" style="padding: 20px;">
    <%= form_with model: @client, local: true, class: "form-wizard" do |form| %>
      <!-- Header do Wizard -->
      <div class="wizard-header">
        <div class="wizard-title">
          <i data-lucide="edit" style="width: 20px; height: 20px; color: var(--primary-blue);"></i>
          <h1>Editar Cliente: <%= @client.nome_completo %></h1>
        </div>
        <div class="wizard-steps">
          <div class="wizard-step active">
            <div class="step-number">1</div>
            <span>Dados Pessoais</span>
          </div>
          <div class="wizard-step">
            <div class="step-number">2</div>
            <span>Dados Funcionais</span>
          </div>
          <div class="wizard-step">
            <div class="step-number">3</div>
            <span>Documentos</span>
          </div>
        </div>
        <div class="wizard-progress">
          <div class="wizard-progress-bar"></div>
        </div>
      </div>
      <!-- Conteúdo do Formulário -->
      <div class="wizard-content">
        <!-- Etapa 1: Dados Pessoais -->
        <div class="wizard-step-content active" id="step1">
          <div class="form-section">
            <h3 class="section-title">
              <i data-lucide="user" style="width: 18px; height: 18px;"></i>
              Informações Pessoais
            </h3>
            <div class="form-row two-cols">
              <div class="form-group">
                <label class="form-label required">Nome Completo</label>
                <%= form.text_field :nome_completo, class: "form-input", placeholder: "Digite o nome completo" %>
              </div>
              <div class="form-group">
                <label class="form-label">Nome Social</label>
                <%= form.text_field :nome_social, class: "form-input", placeholder: "Se houver" %>
              </div>
            </div>
            <div class="form-row three-cols">
              <div class="form-group">
                <label class="form-label required">Data de Nascimento</label>
                <%= form.date_field :data_nascimento, class: "form-input" %>
              </div>
              <div class="form-group">
                <label class="form-label required">Sexo</label>
                <%= form.select :sexo, options_for_select([['Selecione...', ''], ['Masculino', 'M'], ['Feminino', 'F']], @client.sexo), {}, { class: "form-select" } %>
              </div>
              <div class="form-group">
                <label class="form-label required">É Alfabetizado?</label>
                <%= form.select :alfabetizado, options_for_select([['Selecione...', ''], ['Sim', 'sim'], ['Não', 'nao']], @client.alfabetizado), {}, { class: "form-select" } %>
              </div>
            </div>
          </div>
          <div class="form-section">
            <h3 class="section-title">
              <i data-lucide="phone" style="width: 18px; height: 18px;"></i>
              Contato
            </h3>
            <div class="form-row two-cols">
              <div class="form-group">
                <label class="form-label required">Telefone</label>
                <%= form.text_field :telefone, class: "form-input", placeholder: "(00) 00000-0000", data: { mask: "(00) 00000-0000" } %>
              </div>
              <div class="form-group">
                <label class="form-label required">Email</label>
                <%= form.email_field :email, class: "form-input", placeholder: "cliente@email.com" %>
              </div>
            </div>
          </div>
          <div class="form-section">
            <h3 class="section-title">
              <i data-lucide="map-pin" style="width: 18px; height: 18px;"></i>
              Endereço
            </h3>
            <div class="form-row">
              <div class="form-group">
                <label class="form-label required">Endereço Completo</label>
                <%= form.text_area :endereco, class: "form-textarea", placeholder: "Rua, número, bairro, cidade, estado, CEP" %>
              </div>
            </div>
          </div>
        </div>
        <!-- Etapa 2: Dados Funcionais -->
        <div class="wizard-step-content" id="step2" style="display: none;">
          <div class="form-section">
            <h3 class="section-title">
              <i data-lucide="briefcase" style="width: 18px; height: 18px;"></i>
              Informações Funcionais
            </h3>
            <div class="form-row two-cols">
              <div class="form-group">
                <label class="form-label required">Órgão</label>
                <%= form.select :orgao, options_for_select([['Selecione...', ''], ['Estado', 'estado'], ['Prefeitura', 'prefeitura'], ['INSS', 'inss'], ['SIAPE', 'siape']], @client.orgao), {}, { class: "form-select", id: "orgaoSelect" } %>
              </div>
              <div class="form-group">
                <label class="form-label required">Matrícula</label>
                <%= form.text_field :matricula, class: "form-input", placeholder: "Número da matrícula" %>
              </div>
            </div>
            <!-- Campo condicional para Estado -->
            <div class="form-row conditional-field <%= 'show' if @client.orgao == 'estado' %>" id="estadoFields">
              <div class="form-group">
                <label class="form-label required">Ano de Admissão</label>
                <%= form.number_field :ano_admissao, class: "form-input", placeholder: "Ex: 2010", min: 1950, max: 2024 %>
              </div>
            </div>
            <!-- Campos condicionais para INSS -->
            <div class="form-row two-cols conditional-field <%= 'show' if @client.orgao == 'inss' %>" id="inssFields">
              <div class="form-group">
                <label class="form-label required">Tipo de Benefício</label>
                <%= form.select :tipo_beneficio, options_for_select([['Selecione...', ''], ['Aposentadoria', 'aposentadoria'], ['Pensão', 'pensao'], ['Auxílio', 'auxilio'], ['BPC', 'bpc']], @client.tipo_beneficio), {}, { class: "form-select" } %>
              </div>
              <div class="form-group">
                <label class="form-label">Possui Representante Legal?</label>
                <%= form.select :representante_legal, options_for_select([['Selecione...', ''], ['Sim', 'sim'], ['Não', 'nao']], @client.representante_legal), {}, { class: "form-select" } %>
              </div>
            </div>
            <div class="form-row two-cols">
              <div class="form-group">
                <label class="form-label required">Última Margem</label>
                <%= form.text_field :ultima_margem, class: "form-input", placeholder: "R$ 0,00", data: { mask_money: true } %>
              </div>
              <div class="form-group">
                <label class="form-label required">Tipo de Margem</label>
                <%= form.select :tipo_margem, options_for_select([['Selecione...', ''], ['Contrato Novo', 'contrato_novo'], ['Contrato Consignado', 'contrato_consignado'], ['Cartão Benefício', 'cartao_beneficio']], @client.tipo_margem), {}, { class: "form-select" } %>
              </div>
            </div>
          </div>
        </div>
        <!-- Etapa 3: Documentos -->
        <div class="wizard-step-content" id="step3" style="display: none;">
          <div class="form-section">
            <h3 class="section-title">
              <i data-lucide="file-text" style="width: 18px; height: 18px;"></i>
              Upload de Documentos
            </h3>
            <div class="form-row two-cols">
              <div class="form-group">
                <label class="form-label required">RG (Frente)</label>
                <div class="file-upload <%= 'has-file' if @client.rg_frente.present? %>">
                  <i data-lucide="upload" class="file-upload-icon"></i>
                  <div class="file-upload-text">
                    <%= @client.rg_frente.present? ? 'Arquivo atual: ' + @client.rg_frente.original_filename : 'Clique para enviar ou arraste aqui' %>
                  </div>
                  <div class="file-upload-hint">PNG, JPG até 5MB</div>
                  <%= form.file_field :rg_frente, accept: "image/*", style: "display: none;" %>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label required">RG (Verso)</label>
                <div class="file-upload <%= 'has-file' if @client.rg_verso.present? %>">
                  <i data-lucide="upload" class="file-upload-icon"></i>
                  <div class="file-upload-text">
                    <%= @client.rg_verso.present? ? 'Arquivo atual: ' + @client.rg_verso.original_filename : 'Clique para enviar ou arraste aqui' %>
                  </div>
                  <div class="file-upload-hint">PNG, JPG até 5MB</div>
                  <%= form.file_field :rg_verso, accept: "image/*", style: "display: none;" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Ações do Wizard -->
      <div class="wizard-actions">
        <div class="btn-group">
          <button type="button" class="modern-btn modern-btn-outline" id="prevBtn" style="display: none;">
            <i data-lucide="chevron-left" style="width: 14px; height: 14px;"></i>
            Anterior
          </button>
        </div>
        <div class="btn-group">
          <a href="<%= client_path(@client) %>" class="modern-btn modern-btn-outline">
            <i data-lucide="x" style="width: 14px; height: 14px;"></i>
            Cancelar
          </a>
          <button type="button" class="modern-btn modern-btn-primary" id="nextBtn">
            Próximo
            <i data-lucide="chevron-right" style="width: 14px; height: 14px;"></i>
          </button>
          <button type="submit" class="modern-btn modern-btn-success" id="submitBtn" style="display: none;">
            <i data-lucide="save" style="width: 14px; height: 14px;"></i>
            Salvar Alterações
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
<script>
  let currentStep = 1;
  const totalSteps = 3;

  function showStep(step) {
    // Esconder todas as etapas
    document.querySelectorAll('.wizard-step-content').forEach(content => {
      content.style.display = 'none';
    });

    // Mostrar etapa atual
    document.getElementById(`step${step}`).style.display = 'block';

    // Atualizar indicadores visuais
    document.querySelectorAll('.wizard-step').forEach((stepEl, index) => {
      stepEl.classList.remove('active', 'completed');
      if (index + 1 < step) {
        stepEl.classList.add('completed');
      } else if (index + 1 === step) {
        stepEl.classList.add('active');
      }
    });

    // Atualizar barra de progresso
    const progress = ((step - 1) / (totalSteps - 1)) * 100;
    document.querySelector('.wizard-progress-bar').style.width = `${progress}%`;

    // Controlar botões
    document.getElementById('prevBtn').style.display = step > 1 ? 'flex' : 'none';
    document.getElementById('nextBtn').style.display = step < totalSteps ? 'flex' : 'none';
    document.getElementById('submitBtn').style.display = step === totalSteps ? 'flex' : 'none';
  }

  document.getElementById('nextBtn').addEventListener('click', () => {
    if (currentStep < totalSteps) {
      currentStep++;
      showStep(currentStep);
    }
  });

  document.getElementById('prevBtn').addEventListener('click', () => {
    if (currentStep > 1) {
      currentStep--;
      showStep(currentStep);
    }
  });

  // Lógica condicional para campos por órgão
  document.getElementById('orgaoSelect').addEventListener('change', function() {
    const estadoFields = document.getElementById('estadoFields');
    const inssFields = document.getElementById('inssFields');

    // Esconder todos os campos condicionais
    estadoFields.classList.remove('show');
    inssFields.classList.remove('show');

    // Mostrar campos específicos
    if (this.value === 'estado') {
      estadoFields.classList.add('show');
    } else if (this.value === 'inss') {
      inssFields.classList.add('show');
    }
  });

  // Upload de arquivos
  document.querySelectorAll('.file-upload').forEach(upload => {
    const input = upload.querySelector('input[type="file"]');
    upload.addEventListener('click', () => {
      input.click();
    });

    input.addEventListener('change', (e) => {
      if (e.target.files.length > 0) {
        const fileName = e.target.files[0].name;
        upload.querySelector('.file-upload-text').textContent = fileName;
        upload.classList.add('has-file');
      }
    });
  });
</script>